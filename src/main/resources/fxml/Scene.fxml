<BorderPane prefHeight="408.0" prefWidth="441.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.crimes.FXMLController">
   <top>
      <Label text="DenverCrimes" BorderPane.alignment="CENTER" />
   </top>
   <right>
      <VBox prefHeight="415.0" prefWidth="441.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane prefHeight="135.0" prefWidth="392.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Categoria Reato">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </Label>
                  <ComboBox fx:id="boxCategoria" prefWidth="150.0" GridPane.columnIndex="1" />
                  <Label text="Mese" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </Label>
                  <ComboBox fx:id="boxMese" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
