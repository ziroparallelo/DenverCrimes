                  </Button>
                  <Label text="Arco" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </Label>
                  <ComboBox fx:id="boxArco" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="btnPercorso" mnemonicParsing="false" onAction="#doCalcolaPercorso" text="Calcolo Percorso" GridPane.columnIndex="2" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets left="10.0" />
                     </GridPane.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </GridPane>
            <TextArea fx:id="txtResult" prefHeight="318.0" prefWidth="441.0" />
